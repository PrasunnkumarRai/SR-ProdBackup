<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>true</allowRecall>
    <allowedSubmitters>
        <type>creator</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>Owner</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>true</allowDelegate>
        <approvalActions>
            <action>
                <name>Acct_Request_Submitted_to_Management</name>
                <type>FieldUpdate</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <name>jason.coram@charter.com</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <description>Enters this step when Department Responsible is Fulfillment or Encoding</description>
        <entryCriteria>
            <booleanFilter>1 or 2</booleanFilter>
            <criteriaItems>
                <field>Account_Request__c.Department_Responsible__c</field>
                <operation>equals</operation>
                <value>Fulfillment</value>
            </criteriaItems>
            <criteriaItems>
                <field>Account_Request__c.Department_Responsible__c</field>
                <operation>equals</operation>
                <value>Encoding</value>
            </criteriaItems>
        </entryCriteria>
        <ifCriteriaNotMet>GotoNextStep</ifCriteriaNotMet>
        <label>Submitted to Fulfillment</label>
        <name>Submitted_to_Fulfillment</name>
    </approvalStep>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <approvalActions>
            <action>
                <name>Acct_Request_Submitted_to_Finance_Mgr</name>
                <type>FieldUpdate</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <name>Account_Executive_Approving_Manager__c</name>
                <type>relatedUserField</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <label>Submitted to Director of Sales</label>
        <name>Submitted_to_Director_of_Sales</name>
        <rejectBehavior>
            <type>RejectRequest</type>
        </rejectBehavior>
    </approvalStep>
    <approvalStep>
        <allowDelegate>true</allowDelegate>
        <approvalActions>
            <action>
                <name>Acct_Request_Submitted_to_Cash</name>
                <type>FieldUpdate</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <name>david.m.becker@charter.com</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <label>Submitted to Sr. Finance Manager</label>
        <name>Submitted_to_Sr_Finance_Manager</name>
        <rejectBehavior>
            <type>RejectRequest</type>
        </rejectBehavior>
    </approvalStep>
    <approvalStep>
        <allowDelegate>true</allowDelegate>
        <assignedApprover>
            <approver>
                <name>FBO_Queue</name>
                <type>queue</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <label>Submitted to Cash</label>
        <name>Submitted_to_Cash</name>
        <rejectBehavior>
            <type>RejectRequest</type>
        </rejectBehavior>
    </approvalStep>
    <description>Approval Process for &quot;Revenue Request&quot; record type for Account Request object.v3. Adding in a step to route to Cash at the end. This process is entered if MAX Adjustment Amt GREATER OR EQUAL $101 and Less than $5001.
v6 Added Submitted to Finance Manager status.  Added filter for AE Approving Manager not equal to Master - Director of Sales
1-10-21 Updated for new Division and Regions
V8 Removes Central SDOF step per John Osmanski
V9 Updated for 2023 Sales Re Org
V10 Finance and Fulfillment Updates (SRSF-4588)</description>
    <emailTemplate>Account_Request/Acct_Request_Approval_Process_Notification</emailTemplate>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <booleanFilter>1 AND 2 AND 3 AND 4 AND 5 AND 6</booleanFilter>
        <criteriaItems>
            <field>Account_Request__c.RecordType</field>
            <operation>equals</operation>
            <value>Revenue Adjustment</value>
        </criteriaItems>
        <criteriaItems>
            <field>Account_Request__c.Status__c</field>
            <operation>equals</operation>
            <value>New,Denied,Recalled</value>
        </criteriaItems>
        <criteriaItems>
            <field>Account_Request__c.MAX_Adjustment_Amt__c</field>
            <operation>greaterOrEqual</operation>
            <value>0</value>
        </criteriaItems>
        <criteriaItems>
            <field>Account_Request__c.MAX_Adjustment_Amt__c</field>
            <operation>lessThan</operation>
            <value>5001</value>
        </criteriaItems>
        <criteriaItems>
            <field>Account_Request__c.Division__c</field>
            <operation>equals</operation>
            <value>Local</value>
        </criteriaItems>
        <criteriaItems>
            <field>Account_Request__c.AE_Approving_Manager_Profile__c</field>
            <operation>equals</operation>
            <value>Master - Director of Sales</value>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>Acct_Request_Approved_1</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Acct_Request_Set_Status_to_Approved</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Set_Completed_Date</name>
            <type>FieldUpdate</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>true</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>Acct_Request_Rejected_1</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Acct_Request_Set_Status_to_Denied_1</name>
            <type>FieldUpdate</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>Acct_Request_Set_Submitted_for_Approva</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Acct_Request_Submitted_to_DOS</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>Acct Request | Revenue Adj 101 V10 DOS</label>
    <nextAutomatedApprover>
        <useApproverFieldOfRecordOwner>false</useApproverFieldOfRecordOwner>
        <userHierarchyField>Approving_Manager__c</userHierarchyField>
    </nextAutomatedApprover>
    <processOrder>15</processOrder>
    <recallActions>
        <action>
            <name>Account_Request_Set_Status_to_Recalled</name>
            <type>FieldUpdate</type>
        </action>
    </recallActions>
    <recordEditability>AdminOrCurrentApprover</recordEditability>
    <showApprovalHistory>false</showApprovalHistory>
</ApprovalProcess>
