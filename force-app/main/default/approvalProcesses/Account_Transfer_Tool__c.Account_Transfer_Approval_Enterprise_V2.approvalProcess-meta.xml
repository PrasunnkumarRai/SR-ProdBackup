<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>false</allowRecall>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>Owner</field>
        <field>Region__c</field>
        <field>Transfer_Effective_Date__c</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>true</allowDelegate>
        <approvalActions>
            <action>
                <name>Acc_TS_Submitted_to_Credit</name>
                <type>FieldUpdate</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <name>charles.ferruzza@charter.com</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <entryCriteria>
            <criteriaItems>
                <field>Account_Transfer_Tool__c.Region__c</field>
                <operation>equals</operation>
                <value>Enterprise Sales,Enterprise/Brand Direct</value>
            </criteriaItems>
        </entryCriteria>
        <ifCriteriaNotMet>GotoNextStep</ifCriteriaNotMet>
        <label>Submit to Finance Manager - Brand Direct</label>
        <name>Submit_to_Finance_Manager_Brand_Direct</name>
    </approvalStep>
    <approvalStep>
        <allowDelegate>true</allowDelegate>
        <approvalActions>
            <action>
                <name>Acc_TS_Submitted_to_Credit</name>
                <type>FieldUpdate</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <name>napo.delinia@charter.com</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <entryCriteria>
            <criteriaItems>
                <field>Account_Transfer_Tool__c.Region__c</field>
                <operation>equals</operation>
                <value>Enterprise/Programmatic</value>
            </criteriaItems>
        </entryCriteria>
        <ifCriteriaNotMet>GotoNextStep</ifCriteriaNotMet>
        <label>Submit to Finance Manager - Programmatic</label>
        <name>Submit_to_Finance_Manager_Programmatic</name>
        <rejectBehavior>
            <type>RejectRequest</type>
        </rejectBehavior>
    </approvalStep>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <approvalActions>
            <action>
                <name>AccTS_Approved</name>
                <type>FieldUpdate</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <name>FBO_Queue</name>
                <type>queue</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <label>Submitted to Credit</label>
        <name>Submitted_to_Credit</name>
        <rejectBehavior>
            <type>RejectRequest</type>
        </rejectBehavior>
    </approvalStep>
    <description>ATS Approval Process for Enterprise and Programmatic Updating to separate out regions per Tremaine</description>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <criteriaItems>
            <field>Account_Transfer_Tool__c.Status__c</field>
            <operation>equals</operation>
            <value>New,Recalled,Denied</value>
        </criteriaItems>
        <criteriaItems>
            <field>Account_Transfer_Tool__c.Region__c</field>
            <operation>equals</operation>
            <value>Enterprise Sales,Enterprise/Programmatic,Enterprise/Brand Direct</value>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>AccTS_Approved</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Notification_to_BAT_PS_to_execute_Account_Transfer_in_Salesforce</name>
            <type>Alert</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>true</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>AccTS_Denied</name>
            <type>FieldUpdate</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <label>Account Transfer Approval Enterprise V2</label>
    <processOrder>2</processOrder>
    <recallActions>
        <action>
            <name>Acc_TS_Recalled</name>
            <type>FieldUpdate</type>
        </action>
    </recallActions>
    <recordEditability>AdminOrCurrentApprover</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
