<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>true</allowRecall>
    <allowedSubmitters>
        <type>creator</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>Duplicate_Account__c</field>
        <field>LastModifiedBy</field>
        <field>Owner</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <approvalActions>
            <action>
                <name>Acct_Request_Set_Status_Billing</name>
                <type>FieldUpdate</type>
            </action>
            <action>
                <name>In_Billing_1</name>
                <type>FieldUpdate</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <name>FBO_Queue</name>
                <type>queue</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <label>Submitted to Cash</label>
        <name>Submitted_to_Cash</name>
    </approvalStep>
    <description>V2</description>
    <emailTemplate>Account_Request/Acct_Request_Payment_Research_Approval_Notification</emailTemplate>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <criteriaItems>
            <field>Account_Request__c.RecordType</field>
            <operation>equals</operation>
            <value>Payment Research</value>
        </criteriaItems>
        <criteriaItems>
            <field>Account_Request__c.Status__c</field>
            <operation>equals</operation>
            <value>New,Recalled,Denied</value>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>Acct_Request_Payment_Research_Approved</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Acct_Request_Set_Status_to_Completed</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Notify_Former_Owner_and_Manager_of_Change_of_Ownership</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Set_Completed_Date</name>
            <type>FieldUpdate</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>true</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>Acct_Request_Payment_Research_Rejected</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Acct_Request_Set_Status_to_Denied</name>
            <type>FieldUpdate</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>Acct_Request_Submitted_to_Cash</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>Acct Request | Payment Research v2</label>
    <nextAutomatedApprover>
        <useApproverFieldOfRecordOwner>false</useApproverFieldOfRecordOwner>
        <userHierarchyField>Approving_Manager__c</userHierarchyField>
    </nextAutomatedApprover>
    <processOrder>6</processOrder>
    <recallActions>
        <action>
            <name>Account_Request_Set_Status_to_Recalled</name>
            <type>FieldUpdate</type>
        </action>
    </recallActions>
    <recordEditability>AdminOrCurrentApprover</recordEditability>
    <showApprovalHistory>false</showApprovalHistory>
</ApprovalProcess>
