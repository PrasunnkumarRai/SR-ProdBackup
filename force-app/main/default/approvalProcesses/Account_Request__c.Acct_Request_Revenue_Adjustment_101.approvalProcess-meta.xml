<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>false</active>
    <allowRecall>true</allowRecall>
    <allowedSubmitters>
        <type>creator</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>Owner</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <approvalActions>
            <action>
                <name>Acct_Request_Submitted_to_DOS</name>
                <type>FieldUpdate</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <name>Account_Executive_Approving_Manager__c</name>
                <type>relatedUserField</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <label>Submitted to Sales Management</label>
        <name>Submitted_to_Sales_Management</name>
    </approvalStep>
    <approvalStep>
        <allowDelegate>true</allowDelegate>
        <approvalActions>
            <action>
                <name>Acct_Request_Submitted_to_Finance</name>
                <type>FieldUpdate</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <type>userHierarchyField</type>
            </approver>
        </assignedApprover>
        <label>Submitted to Director of Sales</label>
        <name>Submitted_to_Director_of_Sales</name>
        <rejectBehavior>
            <type>RejectRequest</type>
        </rejectBehavior>
    </approvalStep>
    <approvalStep>
        <allowDelegate>true</allowDelegate>
        <approvalActions>
            <action>
                <name>Acct_Request_Submitted_to_Cash</name>
                <type>FieldUpdate</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <name>AccReq_Finance_Central</name>
                <type>queue</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <description>Enters step if MAX Adjustment Amt GREATER OR EQUAL $101 AND Division is  Central.</description>
        <entryCriteria>
            <criteriaItems>
                <field>Account_Request__c.MAX_Adjustment_Amt__c</field>
                <operation>greaterOrEqual</operation>
                <value>101</value>
            </criteriaItems>
            <criteriaItems>
                <field>Account_Request__c.Division__c</field>
                <operation>equals</operation>
                <value>Central</value>
            </criteriaItems>
        </entryCriteria>
        <ifCriteriaNotMet>GotoNextStep</ifCriteriaNotMet>
        <label>Submitted to Finance (Central) Approval</label>
        <name>Submitted_to_Finance_Central_Approval</name>
        <rejectBehavior>
            <type>RejectRequest</type>
        </rejectBehavior>
    </approvalStep>
    <approvalStep>
        <allowDelegate>true</allowDelegate>
        <approvalActions>
            <action>
                <name>Acct_Request_Submitted_to_Cash</name>
                <type>FieldUpdate</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <name>AccReq_Finance_West</name>
                <type>queue</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <description>Enters step if MAX Adjustment Amt GREATER OR EQUAL $101 AND Division is West.</description>
        <entryCriteria>
            <criteriaItems>
                <field>Account_Request__c.MAX_Adjustment_Amt__c</field>
                <operation>greaterOrEqual</operation>
                <value>101</value>
            </criteriaItems>
            <criteriaItems>
                <field>Account_Request__c.Division__c</field>
                <operation>equals</operation>
                <value>West</value>
            </criteriaItems>
        </entryCriteria>
        <ifCriteriaNotMet>GotoNextStep</ifCriteriaNotMet>
        <label>Submitted to Finance (West) Approval</label>
        <name>Submitted_to_Finance_West_Approval</name>
        <rejectBehavior>
            <type>RejectRequest</type>
        </rejectBehavior>
    </approvalStep>
    <approvalStep>
        <allowDelegate>true</allowDelegate>
        <approvalActions>
            <action>
                <name>Acct_Request_Submitted_to_Cash</name>
                <type>FieldUpdate</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <name>AccReq_Finance_East</name>
                <type>queue</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <description>Enters step if MAX Adjustment Amt GREATER OR EQUAL $101 AND Division is South.</description>
        <entryCriteria>
            <criteriaItems>
                <field>Account_Request__c.MAX_Adjustment_Amt__c</field>
                <operation>greaterOrEqual</operation>
                <value>101</value>
            </criteriaItems>
            <criteriaItems>
                <field>Account_Request__c.Division__c</field>
                <operation>equals</operation>
                <value>South</value>
            </criteriaItems>
        </entryCriteria>
        <ifCriteriaNotMet>GotoNextStep</ifCriteriaNotMet>
        <label>Submitted to Finance (South) Approval</label>
        <name>Submitted_to_Finance_South_Approval</name>
        <rejectBehavior>
            <type>RejectRequest</type>
        </rejectBehavior>
    </approvalStep>
    <approvalStep>
        <allowDelegate>true</allowDelegate>
        <approvalActions>
            <action>
                <name>Acct_Request_Submitted_to_Cash</name>
                <type>FieldUpdate</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <name>AccReq_Finance_North_East</name>
                <type>queue</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <description>Enters step if MAX Adjustment Amt GREATER OR EQUAL $101 AND Division is North East.</description>
        <entryCriteria>
            <criteriaItems>
                <field>Account_Request__c.MAX_Adjustment_Amt__c</field>
                <operation>greaterOrEqual</operation>
                <value>101</value>
            </criteriaItems>
            <criteriaItems>
                <field>Account_Request__c.Division__c</field>
                <operation>equals</operation>
                <value>North East</value>
            </criteriaItems>
        </entryCriteria>
        <ifCriteriaNotMet>GotoNextStep</ifCriteriaNotMet>
        <label>Submitted to Finance (North East) Approval</label>
        <name>Submitted_to_Finance_North_East_Approval</name>
        <rejectBehavior>
            <type>RejectRequest</type>
        </rejectBehavior>
    </approvalStep>
    <approvalStep>
        <allowDelegate>true</allowDelegate>
        <assignedApprover>
            <approver>
                <name>FBO_Queue</name>
                <type>queue</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <label>Submitted to Cash</label>
        <name>Submitted_to_Cash</name>
        <rejectBehavior>
            <type>RejectRequest</type>
        </rejectBehavior>
    </approvalStep>
    <description>Approval Process for &quot;Revenue Request&quot; record type for Account Request object.v3. Adding in a step to route to Cash at the end. This process is entered if MAX Adjustment Amt GREATER OR EQUAL $101 and Less than $5001.</description>
    <emailTemplate>Account_Request/Acct_Request_Approval_Process_Notification</emailTemplate>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <criteriaItems>
            <field>Account_Request__c.RecordType</field>
            <operation>equals</operation>
            <value>Revenue Adjustment</value>
        </criteriaItems>
        <criteriaItems>
            <field>Account_Request__c.Status__c</field>
            <operation>equals</operation>
            <value>,New,Denied,Recalled</value>
        </criteriaItems>
        <criteriaItems>
            <field>Account_Request__c.MAX_Adjustment_Amt__c</field>
            <operation>greaterOrEqual</operation>
            <value>101</value>
        </criteriaItems>
        <criteriaItems>
            <field>Account_Request__c.MAX_Adjustment_Amt__c</field>
            <operation>lessThan</operation>
            <value>5001</value>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>Acct_Request_Approved_1</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Acct_Request_Set_Status_to_Approved</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Set_Completed_Date</name>
            <type>FieldUpdate</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>true</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>Acct_Request_Rejected_1</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Acct_Request_Set_Status_to_Denied_1</name>
            <type>FieldUpdate</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>Acct_Request_Set_Status_to_Manager</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Acct_Request_Set_Submitted_for_Approva</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>Acct Request | Revenue Adjustment 101</label>
    <nextAutomatedApprover>
        <useApproverFieldOfRecordOwner>false</useApproverFieldOfRecordOwner>
        <userHierarchyField>Approving_Manager__c</userHierarchyField>
    </nextAutomatedApprover>
    <processOrder>1</processOrder>
    <recallActions>
        <action>
            <name>Account_Request_Set_Status_to_Recalled</name>
            <type>FieldUpdate</type>
        </action>
    </recallActions>
    <recordEditability>AdminOrCurrentApprover</recordEditability>
    <showApprovalHistory>false</showApprovalHistory>
</ApprovalProcess>
