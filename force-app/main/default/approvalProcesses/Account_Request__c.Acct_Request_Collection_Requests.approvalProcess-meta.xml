<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>false</active>
    <allowRecall>true</allowRecall>
    <allowedSubmitters>
        <type>creator</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>Owner</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>true</allowDelegate>
        <approvalActions>
            <action>
                <name>Out_Billing_4</name>
                <type>FieldUpdate</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <name>Collections</name>
                <type>queue</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <label>Submit to Collections</label>
        <name>Submit_to_Collections</name>
    </approvalStep>
    <description>V2</description>
    <emailTemplate>Account_Request/Acct_Request_Approval_Process_Notification</emailTemplate>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <criteriaItems>
            <field>Account_Request__c.Status__c</field>
            <operation>equals</operation>
            <value>New,Denied</value>
        </criteriaItems>
        <criteriaItems>
            <field>Account_Request__c.RecordType</field>
            <operation>equals</operation>
            <value>Collection Request</value>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>Acct_Request_Approved_1</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Acct_Request_Set_Status_to_Approved</name>
            <type>FieldUpdate</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>true</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>Acct_Request_Rejected_1</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Acct_Request_Set_Status_to_Denied</name>
            <type>FieldUpdate</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>Acct_Request_Set_Status_to_Billing</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>In_Billing_1</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Notification_to_AE_LSM_about_Collection_Requests</name>
            <type>Alert</type>
        </action>
    </initialSubmissionActions>
    <label>Acct Request | Collection Requests</label>
    <nextAutomatedApprover>
        <useApproverFieldOfRecordOwner>false</useApproverFieldOfRecordOwner>
        <userHierarchyField>Approving_Manager__c</userHierarchyField>
    </nextAutomatedApprover>
    <processOrder>1</processOrder>
    <recallActions>
        <action>
            <name>Acct_Request_Set_Status_to_New</name>
            <type>FieldUpdate</type>
        </action>
    </recallActions>
    <recordEditability>AdminOnly</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
