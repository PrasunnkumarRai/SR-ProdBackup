<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>true</allowRecall>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>Owner</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>true</allowDelegate>
        <approvalActions>
            <action>
                <name>Acct_Request_Submitted_to_Finance</name>
                <type>FieldUpdate</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <name>Account_Executive_Approving_Manager__c</name>
                <type>relatedUserField</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <label>Submitted to Sales Management</label>
        <name>Submitted_to_Sales_Management</name>
    </approvalStep>
    <approvalStep>
        <allowDelegate>true</allowDelegate>
        <approvalActions>
            <action>
                <name>Acct_Request_Submitted_to_Credit</name>
                <type>FieldUpdate</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <name>david.m.becker@charter.com</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <entryCriteria>
            <criteriaItems>
                <field>Account_Request__c.Division__c</field>
                <operation>equals</operation>
                <value>Local,National</value>
            </criteriaItems>
        </entryCriteria>
        <ifCriteriaNotMet>GotoNextStep</ifCriteriaNotMet>
        <label>Finance Approval</label>
        <name>Finance_Approval</name>
        <rejectBehavior>
            <type>RejectRequest</type>
        </rejectBehavior>
    </approvalStep>
    <approvalStep>
        <allowDelegate>true</allowDelegate>
        <assignedApprover>
            <approver>
                <name>FBO_Queue</name>
                <type>queue</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <label>Submitted to Credit</label>
        <name>Submitted_to_Credit</name>
        <rejectBehavior>
            <type>RejectRequest</type>
        </rejectBehavior>
    </approvalStep>
    <description>Version 5.  Updated for 2023 Sales Re Org</description>
    <emailTemplate>Account_Request/Acct_Request_Approval_Process_Notification</emailTemplate>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <criteriaItems>
            <field>Account_Request__c.Status__c</field>
            <operation>equals</operation>
            <value>New,Recalled,Denied</value>
        </criteriaItems>
        <criteriaItems>
            <field>Account_Request__c.RecordType</field>
            <operation>equals</operation>
            <value>Terms and Conditions Exceptions</value>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>Acct_Request_Approved_1</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Acct_Request_Set_Status_to_Completed</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Set_Completed_Date</name>
            <type>FieldUpdate</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>true</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>Acct_Request_Rejected_1</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Acct_Request_Set_Status_to_Denied</name>
            <type>FieldUpdate</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>Acct_Request_Set_Status_to_Manager</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>LSM_Notification_of_Billing_Address_Requests</name>
            <type>Alert</type>
        </action>
    </initialSubmissionActions>
    <label>Acct Request | Terms &amp; Conditions Excp 5</label>
    <nextAutomatedApprover>
        <useApproverFieldOfRecordOwner>false</useApproverFieldOfRecordOwner>
        <userHierarchyField>Approving_Manager__c</userHierarchyField>
    </nextAutomatedApprover>
    <processOrder>9</processOrder>
    <recallActions>
        <action>
            <name>Account_Request_Set_Status_to_Recalled</name>
            <type>FieldUpdate</type>
        </action>
    </recallActions>
    <recordEditability>AdminOrCurrentApprover</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
