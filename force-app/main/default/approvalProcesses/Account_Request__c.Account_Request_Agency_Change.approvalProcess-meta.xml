<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>false</active>
    <allowRecall>true</allowRecall>
    <allowedSubmitters>
        <type>creator</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>Owner</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <approvalActions>
            <action>
                <name>Submitted_to_LSM</name>
                <type>FieldUpdate</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <type>userHierarchyField</type>
            </approver>
        </assignedApprover>
        <entryCriteria>
            <criteriaItems>
                <field>User.Profile</field>
                <operation>notEqual</operation>
                <value>Master - Local Sales Manager</value>
            </criteriaItems>
        </entryCriteria>
        <ifCriteriaNotMet>ApproveRecord</ifCriteriaNotMet>
        <label>Submitted to LSM</label>
        <name>Submitted_to_LSM</name>
    </approvalStep>
    <approvalStep>
        <allowDelegate>true</allowDelegate>
        <assignedApprover>
            <approver>
                <name>FBO_Queue</name>
                <type>queue</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <label>Approval Request Submitted</label>
        <name>Approval_Request_Submitted</name>
        <rejectBehavior>
            <type>RejectRequest</type>
        </rejectBehavior>
    </approvalStep>
    <emailTemplate>Account_Request/Acct_Request_Approval_Process_Notification</emailTemplate>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <criteriaItems>
            <field>Account_Request__c.Status__c</field>
            <operation>equals</operation>
            <value>New,Recalled,Denied</value>
        </criteriaItems>
        <criteriaItems>
            <field>Account_Request__c.RecordType</field>
            <operation>equals</operation>
            <value>Agency Change</value>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>Acct_Request_Approved_Updated_New</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Acct_Request_Set_Status_to_Completed</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Set_Completed_Date</name>
            <type>FieldUpdate</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>true</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>Acct_Request_Rejected_New</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Acct_Request_Set_Status_to_Denied</name>
            <type>FieldUpdate</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>Acct_Request_Submitted_to_Credits</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>Acct Request | Agency Change</label>
    <nextAutomatedApprover>
        <useApproverFieldOfRecordOwner>true</useApproverFieldOfRecordOwner>
        <userHierarchyField>Approving_Manager__c</userHierarchyField>
    </nextAutomatedApprover>
    <processOrder>32</processOrder>
    <recallActions>
        <action>
            <name>Account_Request_Set_Status_to_Recalled</name>
            <type>FieldUpdate</type>
        </action>
    </recallActions>
    <recordEditability>AdminOnly</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
